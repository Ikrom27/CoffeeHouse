<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.menu.CartFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/bt_back_light"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_arrow"
            android:backgroundTint="@color/black"
            android:scaleX="-1"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/my_cart"
            android:textColor="@color/primary_text"
            android:textSize="20sp"

            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/bt_back_light"
            app:layout_constraintTop_toBottomOf="@+id/bt_back_light" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_container"
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="32dp"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints">


            <Button
                android:id="@+id/btn_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/checkout"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_primary"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_checkout"
                android:layout_alignParentStart="true"
                android:layout_marginVertical="1dp"
                android:layout_marginStart="0dp"
                android:text="@string/total_price"
                android:textColor="@color/primary_text"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_checkout"
                android:layout_alignEnd="@+id/btn_checkout"
                android:layout_marginVertical="1dp"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="1dp"
                android:text="@string/price_text"
                android:textColor="@color/primary_text"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>