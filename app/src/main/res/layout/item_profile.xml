<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="13dp">

    <ImageView
        android:id="@+id/bg_icon_profile"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:padding="11dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/items_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_profile_title"
        app:layout_constraintStart_toEndOf="@+id/bg_icon_profile"
        app:layout_constraintTop_toTopOf="@+id/bg_icon_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/add_title"
        android:textColor="@color/secondary_text"
        android:textSize="11sp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/item_profile_description"
        app:layout_constraintEnd_toStartOf="@+id/item_profile_edit"
        app:layout_constraintStart_toStartOf="@+id/item_profile_title"
        app:layout_constraintTop_toBottomOf="@+id/item_profile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="58dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/add_title"
        android:textColor="@color/primary"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="288dp" />

    <ImageButton
        android:id="@+id/item_profile_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="93dp" />
</androidx.constraintlayout.widget.ConstraintLayout>